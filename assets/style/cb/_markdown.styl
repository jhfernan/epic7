div.markdown
	font-size: 1.25rem
	hr
		margin: $md 0 $sm
	ul
		margin-left: $sm
	p, ul
		margin-bottom: $xs
	pre
		background-color: $dark
		border-radius: $xs
		padding: $sm $sm 0
		@media (min-width: 1200px)
			width: 80%
		code
			background: none
			box-shadow: none

div.markdown-naked
	p
		margin-bottom: 0
